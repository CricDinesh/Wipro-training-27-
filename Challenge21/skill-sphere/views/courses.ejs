<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Available Courses</title>
    <style>
      body {
        font-family: Arial;
        padding: 20px;
      }
      h1 {
        color: #333;
      }
      table {
        width: 60%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th, td {
        padding: 10px;
        border: 1px solid #aaa;
      }
      th {
        background: #f0f0f0;
      }
    </style>
  </head>

  <body>
    <h1>Available Courses</h1>

    <table>
      <tr>
        <th>ID</th>
        <th>Course Name</th>
        <th>Duration</th>
      </tr>

      <% courses.forEach(course => { %>
        <tr>
          <td><%= course.id %></td>
          <td><%= course.title %></td>
          <td><%= course.duration %></td>
        </tr>
      <% }) %>
    </table>

  </body>
</html>
